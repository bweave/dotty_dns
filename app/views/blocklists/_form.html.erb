<%= form_with(model: blocklist) do |form| %>
  <% if blocklist.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(blocklist.errors.count, "error") %> prohibited this blocklist from being saved:</h2>

      <ul>
        <% blocklist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :refresh, style: "display: block" do %>
      <%= blocklist.new_record? ? "Fetch" : "Refresh" %> after save
      <%= form.check_box :refresh, checked: true %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
